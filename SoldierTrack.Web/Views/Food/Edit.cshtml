@using SoldierTrack.Web.Models.Food

@model FoodFormModel

@{
    this.ViewData["Title"] = "Edit Food";
    var foodId = this.ViewBag.FoodId;
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Edit Food</h2>
            <form asp-action="Edit" method="post">
                <partial name="_FoodPartial" model="@this.Model"></partial>
                <input asp-for="@foodId" type="hidden" />
                <button type="submit" class="btn btn-primary">Edit</button>
                <a class="btn btn-secondary" asp-area="" asp-controller="Food" asp-action="GetAll">Back</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await this.Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
