@using SoldierTrack.Web.Models.Exercise

@model ExerciseFormModel

@{
    this.ViewData["Title"] = "Edit Exercise";
    var exerciseId = this.ViewBag.ExerciseId;
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Edit Exercise</h2>
            <form asp-action="Edit" method="post">
                <partial name="_ExercisePartial" model="@this.Model"></partial>
                <input asp-for="@exerciseId" type="hidden" />
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-area="" asp-controller="Exercise" asp-action="GetAll" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await this.Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

