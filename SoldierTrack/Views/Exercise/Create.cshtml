@using SoldierTrack.Web.Models.Exercise

@model ExerciseFormModel

@{
    this.ViewData["Title"] = "Create Exercise";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Create Exercise</h2>
            <form asp-action="Create" method="post">
                <partial name="_FormPartial" model="@this.Model"></partial>
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Achievement" asp-action="GetAll" asp-route-athleteId="@this.Model.AthleteId" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
