@using SoldierTrack.Services.Exercise.Models

@model ExerciseDetailsServiceModel

@{
    ViewData["Title"] = "Exercise Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Exercise Card -->
            <div class="card shadow-lg border-0 rounded-3">
                <!-- Exercise Image -->
                <img src="@Model.ImageUrl" alt="@Model.Name" class="card-img-top img-fluid" style="max-height: 350px; object-fit: cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">

                <div class="card-body">
                    <!-- Exercise Title and Category -->
                    <h2 class="card-title text-center fw-bold text-primary">@Model.Name</h2>
                    <p class="text-center text-muted mb-3">
                        Category: <span class="fw-semibold">@Model.Category</span>
                    </p>

                    <!-- Beginner/Advanced Tag -->
                    <div class="text-center mb-3">
                        @if (Model.IsForBeginners)
                        {
                            <span class="badge bg-success fs-6 px-4 py-2">Beginner-Friendly</span>
                        }
                        else
                        {
                            <span class="badge bg-danger fs-6 px-4 py-2">Advanced</span>
                        }
                    </div>
                    <p class="card-text text-center text-muted mb-4 fs-5">@Model.Description</p>
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a asp-action="GetAll" class="btn btn-secondary btn-lg px-5">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .badge {
        font-size: 1.2rem;
        padding: 10px 15px;
    }

    .card-img-top {
        transition: transform 0.3s ease;
    }

        .card-img-top:hover {
            transform: scale(1.05);
        }

    .btn {
        transition: background-color 0.2s ease, color 0.2s ease;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
    }
</style>
