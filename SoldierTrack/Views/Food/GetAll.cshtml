@using SoldierTrack.Services.Food.Models
@using SoldierTrack.Web.Common.Extensions
@using SoldierTrack.Web.Models.Meal

@model FoodPageServiceModel

@{
    this.ViewData["Title"] = "Foods";

    var athleteId = this.User.GetId();
    var userIsAdmin = this.User.IsAdmin();
    var foods = this.Model.Foods;
    var pageIndex = this.Model.PageIndex;
    var totalPages = this.Model.TotalPages;
    var pageSize = this.Model.PageSize;
    var searchTerm = this.ViewData["searchTerm"]?.ToString();
    var includeMine = this.ViewData["includeMine"]?.ToString() ?? "false";
}

@if (this.TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <p>@this.TempData["SuccessMessage"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="get" asp-action="GetAll" class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <div class="input-group shadow-sm">
                        <input type="text" id="searchTerm" name="searchTerm" class="form-control rounded-start-pill py-2 px-3" placeholder="Search for food..." />
                        <div class="form-check me-2">
                            <input type="checkbox" class="form-check-input" id="includeMine" name="includeMine" value="true" @(includeMine == "true" ? "checked" : "") />
                            <label class="form-check-label" for="includeMine">Include my exercises</label>
                        </div>
                        <button type="submit" class="btn btn-secondary rounded-end-pill px-4 ms-2 d-flex align-items-center">
                            <i class="bi bi-search me-2"></i> Search
                        </button>
                    </div>
                </div>
            </form>

            <div class="card shadow-sm border-0 rounded-4" style="background-color: #f8f9fa;">
                <div class="card-body">
                    <h5 class="card-title mb-4 text-center">Foods</h5>
                    <ul class="list-group">
                        @if (foods.Count() > 0)
                        {
                            @foreach (var food in foods)
                            {
                                <li class="list-group-item py-3">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h6 class="fw-bold text-dark">@food.Name</h6>
                                            <div class="small text-muted">
                                                <p class="mb-0">Total Calories: <span class="text-dark fw-bold">@food.TotalCalories</span></p>
                                                <p class="mb-0">Protein: <span>@food.Proteins</span>g</p>
                                                <p class="mb-0">Carbohydrates: <span>@food.Carbohydrates</span>g</p>
                                                <p class="mb-0">Fats: <span>@food.Fats</span>g</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            @if (athleteId != null)
                                            {
                                                <form 
                                                      method="post"
                                                      asp-controller="FoodDiary"
                                                      asp-action="AddFood"
                                                      asp-route-foodId="@food.Id"
                                                      asp-route-athleteId="@athleteId"
                                                      class="d-flex flex-wrap justify-content-between gap-3">
                                                        <select id="mealType" name="mealType" class="form-select" style="width: 200px;">
                                                            @foreach (var mealType in Enum.GetValues(typeof(MealType)).Cast<MealType>())
                                                            {
                                                                <option value="@mealType">@mealType</option>
                                                            }
                                                        </select>
                                                        <input type="date"
                                                               name="date"
                                                               value="@DateTime.Now.ToString("yyyy-MM-dd")"
                                                               required
                                                               class="form-control"
                                                               style="width: 200px;" />

                                                        <input type="number"
                                                               name="quantity"
                                                               required
                                                               min="1"
                                                               placeholder="grams"
                                                               class="form-control"
                                                               style="width: 200px;" />
                                                        <button type="submit" class="btn btn-success" style="width: 100px;">
                                                            <i class="bi bi-plus-circle"></i> Add
                                                        </button>
                                                </form>
                                            }
                                            <a asp-action="Details" asp-route-id="@food.Id" class="btn btn-primary">Details</a>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-center py-3">
                                <p class="text-muted mb-0">No foods found for your search term. Try a different search!</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (pageIndex > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="GetAll" asp-route-pageIndex="@(pageIndex - 1)" asp-route-pageSize="@pageSize"
                               asp-route-searchTerm="@searchTerm" asp-route-includeMine="@includeMine">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                    }

                    @if (pageIndex > 3)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="GetAll" asp-route-pageIndex="1" asp-route-pageSize="@pageSize"
                               asp-route-searchTerm="@searchTerm" asp-route-includeMine="@includeMine">1</a>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }

                    @for (int i = Math.Max(1, pageIndex - 2); i <= Math.Min(totalPages, pageIndex + 2); i++)
                    {
                        <li class="page-item @(i == pageIndex ? "active" : "")">
                            <a class="page-link" asp-action="GetAll" asp-route-pageIndex="@i" asp-route-pageSize="@pageSize"
                               asp-route-searchTerm="@searchTerm" asp-route-includeMine="@includeMine">@i</a>
                        </li>
                    }

                    @if (pageIndex < totalPages - 2)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="GetAll" asp-route-pageIndex="@totalPages" asp-route-pageSize="@pageSize"
                               asp-route-searchTerm="@searchTerm" asp-route-includeMine="@includeMine">@totalPages</a>
                        </li>
                    }

                    @if (pageIndex < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="GetAll" asp-route-pageIndex="@(pageIndex + 1)" asp-route-pageSize="@pageSize"
                               asp-route-searchTerm="@searchTerm" asp-route-includeMine="@includeMine">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Next</span>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<style>
    input:focus {
        outline: 0;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        border-color: rgba(0, 123, 255, 0.5);
    }

    button:hover {
        background-color: #5a6268;
    }
</style>