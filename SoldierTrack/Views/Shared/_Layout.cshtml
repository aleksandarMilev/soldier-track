@using Microsoft.AspNetCore.Identity
@using SoldierTrack.Data.Models
@using SoldierTrack.Services.Membership
@using SoldierTrack.Web.Common.Extensions

@using static SoldierTrack.Web.Common.Constants.WebConstants

@inject IMembershipService membershipService;

@{
    var athleteId = this.User.GetId();
    var userIsAdmin = this.User.IsInRole(AdminRoleName);
    var userIsLogged = this.User?.Identity?.IsAuthenticated ?? false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - SoldierTrack</title>
    <link rel="icon" href="~/images/sf-ic.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SoldierTrack</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a 
                                    class="nav-link"
                                    asp-area=""
                                    asp-controller="Home"
                                    asp-action="FAQ">
                                        FAQ
                                </a>
                            </li>

                            @if (userIsAdmin || userIsLogged)
                            {
                                <li class="nav-item">
                                    <a 
                                    class="nav-link" 
                                    asp-area="" 
                                    asp-controller="Workout" 
                                    asp-action="GetAll">
                                        Workouts
                                    </a>
                                </li>
                            }

                            @if (userIsAdmin)
                            {
                                <li class="nav-item">
                                    <a 
                                        class="nav-link" 
                                        asp-area="Administrator" 
                                        asp-controller="Workout" 
                                        asp-action="Create">
                                            Create Workout
                                    </a>
                                </li>
                                <li class="nav-item">
                                    @{
                                        var pendingCount = await this.membershipService.GetPendingCountAsync();
                                    }
                                    <a class="nav-link"
                                       asp-area="Administrator"
                                       asp-controller="Athlete"
                                       asp-action="GetAll">
                                        Athletes
                                        @if (pendingCount > 0)
                                        {
                                            <span class="badge bg-danger" style="font-size: 0.75em; padding: 0.2em 0.5em; margin-left: 0.5em;">
                                                @pendingCount
                                                <span class="visually-hidden">pending memberships</span>
                                            </span>
                                        }
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a 
                                        class="nav-link"
                                        asp-area=""
                                        asp-controller="Exercise"
                                        asp-action="GetAll">
                                            Exercises
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a 
                                        class="nav-link"
                                        asp-area=""
                                        asp-controller="Food"
                                        asp-action="GetAll">
                                            Foods
                                    </a>
                                </li>
                            }
                            else if (userIsLogged)
                            {
                                <li class="nav-item">
                                    <a 
                                        class="nav-link" 
                                        asp-area="" 
                                        asp-controller="Athlete" 
                                        asp-action="Details"
                                        asp-route-id="@athleteId">
                                            My Profile
                                    </a>
                                </li>

                                if(!await this.membershipService.MembershipExistsByAthleteIdAsync(athleteId!))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           asp-area=""
                                           asp-controller="Membership"
                                           asp-action="RequestMembership"
                                           asp-route-athleteId="@athleteId">
                                                Request Membership
                                        </a>
                                    </li>
                                }

                                <li class="nav-item">
                                    <a 
                                        class="nav-link"
                                        asp-area=""
                                        asp-controller="Achievement"
                                        asp-action="GetAll">
                                            My Achievements
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a 
                                        class="nav-link"
                                        asp-area=""
                                        asp-controller="Exercise"
                                        asp-action="Create">
                                            Create Exercise
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a 
                                        class="nav-link"
                                        asp-area=""
                                        asp-controller="FoodDiary"
                                        asp-action="MyDiary">
                                            My Diary
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a
                                        class="nav-link"
                                        asp-area=""
                                       asp-controller="Food"
                                        asp-action="Create">
                                            Create Food
                                    </a>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @this.RenderBody()
            </main>
        </div>

        <footer class="footer text-center">
            <div class="container">
                &copy; @DateTime.Now.Year - SoldierTrack - 
                <a 
                    target="_blank"
                    href="https://github.com/aleksandarMilev/SoldierTrack" 
                    style="color: white; text-decoration: none;">
                        Open source project
                </a>

            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>