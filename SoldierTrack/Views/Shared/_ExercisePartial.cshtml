@using SoldierTrack.Web.Models.Exercise

@model ExerciseFormModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Category" class="control-label"></label>
    <select asp-for="Category" asp-items="this.Html.GetEnumSelectList<ExerciseCategory>()" class="form-control">
        <option value="">-- Select Category --</option>
    </select>
    <span asp-validation-for="Category" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ImageUrl" class="control-label"></label>
    <input asp-for="ImageUrl" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control" rows="5" style="min-height: 150px; resize: vertical;"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IsForBeginners" class="control-label"></label>
    <input asp-for="IsForBeginners" class="form-check-input" type="checkbox" />
    <span asp-validation-for="IsForBeginners" class="text-danger"></span>
</div>
<input asp-for="AthleteId" type="hidden" />
