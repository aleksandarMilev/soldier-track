@using SoldierTrack.Services.Athlete
@using SoldierTrack.Services.Workout.Models
@using SoldierTrack.Web.Common.Extensions

@model WorkoutDetailsServiceModel

@inject IAthleteService service;

@{
    this.ViewData["Title"] = "Workout Details";
}

@if (this.TempData["Message"] != null)
{
    <div class="alert alert-success">
        <p>@this.TempData["Message"]</p>
    </div>
}

@if (this.TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <p>@this.TempData["ErrorMessage"]</p>
    </div>
}

@{
    var workout = this.Model;

    var workoutIsClosed =
        workout.Date < DateTime.Now.Date ||
        (workout.Date == DateTime.Now.Date && workout.Time < DateTime.Now.TimeOfDay);

    var userId = this.User.GetId();
    var athleteId = await this.service.GetIdByUserIdAsync(userId!);
    var athleteAlreadyJoined = await service.AthleteAlreadyJoinedByIdAsync(athleteId, workout.Id);
}

<div class="container mt-4">
    <h2 class="mb-4">@workout.Title</h2>
    <div class="row">
        <div class="col-md-5">
            <img src="@workout.ImageUrl" alt="@workout.Title" class="img-fluid rounded" style="width: 100%; max-width: 400px; height: auto;" />
        </div>
        <div class="col-md-7">
            <h3>Details</h3>
            <table class="table table-sm table-striped">
                <tr>
                    <th>Date:</th>
                    <td>@workout.Date.ToString("dd MMM yyyy")</td>
                </tr>
                <tr>
                    <th>Time:</th>
                    <td>@workout.Time.ToString(@"hh\:mm")</td>
                </tr>
                @if (!string.IsNullOrEmpty(workout.BriefDescription))
                {
                    <tr>
                        <th>Brief Description:</th>
                        <td>@workout.BriefDescription</td>
                    </tr>
                }
                @if (!string.IsNullOrEmpty(workout.FullDescription))
                {
                    <tr>
                        <th>Full Description:</th>
                        <td>@workout.FullDescription</td>
                    </tr>
                }
                <tr>
                    <th>Category:</th>
                    <td>@workout.CategoryName.ToString()</td>
                </tr>
                <tr>
                    <th>For Beginners:</th>
                    <td>@(workout.IsForBeginners ? "Yes" : "No")</td>
                </tr>
                <tr>
                    <th>Max Participants:</th>
                    <td>@workout.MaxParticipants</td>
                </tr>
                <tr>
                    <th>Current Participants:</th>
                    <td>@workout.CurrentParticipants</td>
                </tr>
            </table>
            @if (this.User.Identity != null &&
                this.User.Identity.IsAuthenticated &&
                !this.User.IsAdmin())
            {
                if (!workoutIsClosed)
                {
                    if (!athleteAlreadyJoined)
                    {
                        <form asp-area=""
                              asp-controller="Athlete"
                              asp-action="Join"
                              asp-route-athleteId="@athleteId"
                              asp-route-workoutId="@workout.Id"
                              method="post"
                              onsubmit="return confirm('Are you sure you want to join in the workout?')">
                             <button type="submit" class="btn btn-primary">Join</button>
                        </form>
                    }
                    else
                    {
                        <form asp-area=""
                              asp-controller="Athlete"
                              asp-action="Leave"
                              asp-route-athleteId="@athleteId"
                              asp-route-workoutId="@workout.Id"
                              method="post"
                              onsubmit="return confirm('Are you sure you want to leave this workout?')">
                            <button type="submit" class="btn btn-danger">Leave</button>
                        </form>
                    }
                }
            }
    </div>
        @if (workout.Athletes.Count() > 0)
        {
            <div class="mt-5">
                <h3>Athletes</h3>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var athlete in workout.Athletes)
                    {
                        <div class="col">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">@athlete.FirstName @athlete.LastName</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm table-borderless">
                                        <tbody>
                                            <tr>
                                                <th>First Name:</th>
                                                <td>@athlete.FirstName</td>
                                            </tr>
                                            <tr>
                                                <th>Last Name:</th>
                                                <td>@athlete.LastName</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="card-footer bg-light d-flex justify-content-between">
                                    @if (this.User.IsAdmin() && !workoutIsClosed)
                                    {
                                        <form
                                            asp-area=""
                                            asp-controller="Workout"
                                            asp-action="RemoveFromWorkout"
                                            method="post"
                                            onsubmit="return confirm('Are you sure you want to remove this athlete from the workout?')"
                                            class="d-inline">
                                            <input type="hidden" name="athleteId" value="@athleteId" />
                                            <input type="hidden" name="workoutId" value="@workout.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                        </form>
                                    }
                                    @if (this.User.IsAdmin())
                                    {
                                        <a 
                                           asp-area=""
                                           asp-controller="Athlete"
                                           asp-action="Details"
                                           asp-route-id="@athleteId"
                                           class="btn btn-primary btn-sm">
                                            View Details
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        else
        {
            <div class="mt-5">
                <p>No athletes for this workout yet!</p>
            </div>
        }
        <a asp-area="" asp-controller="Workout" asp-action="GetAll" class="btn btn-secondary mt-4">Back to List</a>
</div>