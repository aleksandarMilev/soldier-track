@using SoldierTrack.Web.Models.Athlete

@model CreateAthleteViewModel

@{
    this.ViewData["Title"] = "Become Athlete";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Become Athlete</h2>
            <h6 style="margin-bottom: 1em; margin-top: -0.2em;">And join in our community!</h6>
            <form asp-area="" asp-controller="Athlete" asp-action="Create" method="post" class="form-horizontal">
                <partial name="_FormPartial" model="this.Model" />
                <p style="margin-top: 0.75em; margin-bottom:-0.5em;" class="text text-info">Fields marked with '*' are required</p>
                <div class="form-group" style="margin-top: 1em">
                    <button type="submit" class="btn btn-primary">Become</button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
