@using SoldierTrack.Web.Models.Athlete

@using static SoldierTrack.Web.Common.Constants.WebConstants;

@model EditAthleteViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Edit Profile</h2>
            <h6 style="margin-bottom: 1em; margin-top: -0.2em;"></h6>
            <form asp-area="" asp-controller="Athlete" asp-action="Edit" method="post" class="form-horizontal">
                <input type="hidden" asp-for="UserId"></>
                <partial name="_FormPartial" model="Model" />
                <p style="margin-top: 0.75em; margin-bottom:-0.5em;" class="text text-info">Fields marked with '*' are required</p>
                <div class="form-group" style="margin-top: 1em">
                    <button type="submit" class="btn btn-primary">Edit</button>
                    <a asp-route-id="@Model.Id" asp-area="" asp-controller="Athlete" asp-action="Details" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
