@using SoldierTrack.Web.Models.Athlete

@using static SoldierTrack.Web.Common.Constants.WebConstants;

@model AthleteFormModel

@{
    this.ViewData["Title"] = "Edit Profile";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Edit Profile</h2>
            <h6 style="margin-bottom: 1em; margin-top: -0.2em;"></h6>
            <form asp-area="" asp-controller="Athlete" asp-action="Edit" method="post" class="form-horizontal">
                <input type="hidden" asp-for="Id"></>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <p style="margin-top: 0.75em; margin-bottom:-0.5em;" class="text text-info">Fields marked with '*' are required</p>
                <div class="form-group" style="margin-top: 1em">
                    <button type="submit" class="btn btn-primary">Edit</button>
                    <a asp-route-id="@this.Model.Id" asp-area="" asp-controller="Athlete" asp-action="Details" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await this.Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
