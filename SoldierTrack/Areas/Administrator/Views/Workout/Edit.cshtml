@using SoldierTrack.Web.Areas.Administrator.Models.Workout

@model EditWorkoutViewModel
@{
    ViewData["Title"] = "Edit Workout";
}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-6">
            <h2>Edit Workout</h2>
            <form asp-area="Administrator" asp-controller="Workout" asp-action="Edit" method="post" class="form-horizontal">
                <partial name="_WorkoutFormPartial" model="Model" />
                <div class="form-group" style="margin-top: 1em">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="GetAll" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}